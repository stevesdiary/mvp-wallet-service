{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    // "checkJs": true,
    // "allowJs": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}